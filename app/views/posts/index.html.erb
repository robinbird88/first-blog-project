<p id="notice"><%= notice %></p>

<center><h1 class="index">The Urban Mom Blog</h1></center>


<!-- style for show comments, edit, and destroy -->
<div class="container" >
    <div class="row">
    <% @posts.each do |post| %>
      
     <!-- <div class="col-md-4">  -->
      <div class="panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title"><%= post.title.html_safe %></h3>
        </div>  
        <div class="panel-body">   
          <p>By <em><%= post.user.username %> <%= image_tag post.user.avatar.thumb %></em></p>
       
          <p><%= post.blog_entry.html_safe %></p>
          <p><%= link_to 'Show Comments', post, class: "btn btn-primary" %> |
          <%= link_to 'Edit', edit_post_path(post), class: "btn btn-warning" %> |
          <%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %></p>
        </div>
      </div> 
      <!-- </div>  -->
    <% end %>
    </div>
  </div>  
  

<%= link_to 'New Post', new_post_path, class: "btn btn-success" %>



